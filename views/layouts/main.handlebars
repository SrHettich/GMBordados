<script>
    var fundo = document.body.style.backgroundColor 
    var cor = document.body.style.color

    var section = document.getElementById('section')
    var card = document.getElementsByClassName('card')
    function claro()
    {
        
        document.body.style.backgroundColor = '#F0F0F5'
        document.body.style.color = 'black'
         section.style.boxShadow = '3px 5px 10px'
        section.style.borderColor = 'none'
        section.style.borderStyle = 'none'
        section.style.backgroundColor = '#F0F0F5'
    }

    function escuro()
    {
        document.body.style.backgroundColor = '#101014'
        document.body.style.color = 'white'
        section.style.boxShadow = '0px 0px 0px'
        section.style.borderColor = 'white'
        section.style.borderStyle = 'inset'
        section.style.backgroundColor = '#101014'

    }

    if(document.body.style.backgroundColor = 'white')
    {
        section.style.backgroundColor = 'white'
    }
    else
    {
        section.style.backgroundColor = 'black'
    }

    
</script>
