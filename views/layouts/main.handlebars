                .card
            {
            --bs-card-bg: none;
            --bs-card-border-color: rgb(88 88 88);
            display: flex;
            min-width: 300px;
            margin-top: 15px;
            }

            .card-body
            {
                
                align-items: center;
                justify-content: center;
            }

            .btn-outline-success, .btn-outline-danger
            {
                transition: 0.4s;
            }

            .form-control
            {
                border: 2px solid #a5a9ad;
            }

            .foto-pedido
            {
                border-radius: 5%;
                border: 1px dashed currentcolor;
                
            }

            .ver
            {
                border: none;
                background-color: transparent ;
                margin-bottom: .5rem ;
                color: currentColor;
            }
             

            #senha
            {
                align-items: center;
                justify-content: center;
                display: flex;
            }

            footer
            {
                background-color: #101014;
                color: #f4f4f4;
                height: auto;
                padding: 30px;
                margin-top: 15px;
                flex-shrink: 1;
                
                
            }
            
            body
            {
                height: 100%;
                margin: 0px;
                padding: 0px;
                display: flex;
                flex-direction: column;
                background-color: #F0F0F5;
            }

            .content
            {
                flex: 1;
                min-height: 100vh;
            }

            .footer-content
            {
                display: flex;
                align-items: center;
                justify-content: center;
                flex-direction: column;
                text-align: center;
                
            }

            .footer-content h3
            {
                font-size: 1.8rem;
                font-weight: 400;
                line-height: 3rem;
            }

            .footer-content p
            {
                max-width: 500px;
                margin: 10px auto;
                line-height: 28px;
                font-size: 15px;
            }

            .sociais
            {
                list-style: none;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 1rem 0 3rem 0;
            }

            .sociais li
            {
                margin: 0 25px;
            }

            .sociais a 
            {
                text-decoration: none;
                color: #f4f4f4;
            }

            .sociais a i
            {
                font-size: 2rem;
            }

            .sociais a:hover i
            {
                transition: .3s;
            }
            .sociais a:hover i.fa.fa-map-marker
            {
                color: #DB4437;
            }
            
            .sociais a:hover i.fa.fa-instagram
            {
                color: #E1306C;
            }

            .sociais a:hover i.fa.fa-whatsapp
            {
                color: #25D366;
            }
            
            .sociais a:hover i.fa.fa-google
            {
                color: #DB4437
            }
            
            .footer-bottom
            {
                background-color: #101014;
                
                padding: 20px 0;
                text-align: center;
                justify-content: center;
                
                
            }

            .footer-bottom p
            {
                word-spacing: 2px;
                font-size: 14px;
                text-transform: capitalize;
            }
    </style>

