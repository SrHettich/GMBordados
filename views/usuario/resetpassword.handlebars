<div class="content">
<div class="card">
    <div class="card-body">

        <h2>Redefinir Senha</h2>
        <hr>

        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}

        <form action="/usuario/reset_password" method="post">
        <label for="email"><Strong>Email:</Strong></label>
        <p><input class="form-control" type="email" id="email" name="email" placeholder="Email" required></p>

        <label for="token"><Strong>Token:</Strong></label>
        <p><input class="form-control" type="text" id="token" name="token" placeholder="Token" required></p>

        <label for="senha"><Strong>Senha:</Strong></label>
        <p><input class="form-control" type="password" id="senha" name="senha" placeholder="Senha" required></p>

        <label for="senha2"><Strong>Senha:</Strong></label>
        <p><input class="form-control" type="password" id="senha2" name="senha2" placeholder="Confirme a senha" required></p>

        <button type="button" id="mostrar" class="ver"><img src="/images/olho.svg" class="ver" alt="" width="15px"><t id="textSenha"> Mostrar senhas</t></button>

        <div class="d-grid gap-2">
        <button class="btn btn-outline-success" type="submit">Redefinir Senha</button>
        </div>
        </form>
     </div>
</div>
</div>

<script>
        var mostrar = document.getElementById('mostrar')

mostrar.addEventListener('click', () =>
{
    var senha = document.getElementById('senha')
    var senha2 = document.getElementById('senha2')
    

    if(senha.type == "password")
    {
        senha.type = "text"
        senha2.type = "text"
        this.style.opacity = '1'
        
    }
    else
    {
        senha.type = "password"
        senha2.type = "password"
        this.style.opacity = '.5'
        
    }
})
    </script>